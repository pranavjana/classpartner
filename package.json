{
  "name": "classroom-assistant",
  "productName": "Classroom Assistant",
  "version": "1.0.0",
  "description": "Transparent overlay window for classroom transcription and assistance",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "desktop:dev": "concurrently -k \"npm --prefix apps/dashboard run dev -- -p 3001\" \"wait-on http://localhost:3001 && cross-env RENDERER_URL=http://localhost:3001 electron-forge start\"",
    "build:web": "npm --prefix apps/dashboard run build",
    "desktop:make": "npm run build:web && electron-forge make"
  },
  "keywords": [],
  "author": {
    "name": "Pranav Janakiraman",
    "email": "pranavjana2003@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/google": "^2.0.12",
    "@deepgram/sdk": "^3.13.0",
    "@xenova/transformers": "^2.17.2",
    "ai": "^5.0.33",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.0",
    "electron-reloader": "^1.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "react-day-picker": "^9.11.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "38.0.0",
    "wait-on": "^7.2.0"
  }
}
